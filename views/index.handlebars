

<div class="jumbotron jumbotron-fluid text-center">
  <div class="container">
    
    <h1 id="title"class="display-4">Eat-Da-Burger</h1>
    <p class="lead"></p>
    
  </div>
</div>





<div id="contAinEr"class="container">
	
	<div class="row">
	    <div class="center col-sm-12">
		
	        {{!-- <h1>Eat-Da-Burger App</h1> --}}
	        <p></p>
	    </div>
  	</div>
	<!-- end .row -->

	<div class="row">
	    <div class="col-sm-6">

			<br>
			<h2>Burgers Available To Eat!</h2>

			<ul>
			  {{#each burgers}}
			    {{#unless this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}}

			        
			          <button id="devoButton"class="btn-primary dovouredButton" value="{{this.id}}">Devour It!</button>
								<br>
			       

			      </li>
			    {{/unless}}
			  {{/each}}
			</ul>

	    </div>



	    <div class="col-sm-6">
				<br>
			<h2 id="eaten">Burgers That Have Been Eaten!</h2>
			
			  {{#each burgers}}
			    {{#if this.devoured}}
			      <li id="beenEaten">
			      	{{this.id}}
			        {{this.burger_name}}

			      </li>
			    {{/if}}
			  {{/each}}
			
	    </div>

  	</div>
	<!-- end .row -->
  <br>
	<div id="addBurger" class="row">
	    <div class="center col-sm-12">

			<h2>Add A Burger!</h2>

			<form class="create-update-form" action="/" method="POST">

			  <div class="form-group">
			    <p>Enter a burger you want to order and click the Submit Order button.</p>
			    <input type="text" id="ca" name="burger_name">
			  </div>
			  
			  <button id="submit"class="btn-primary" type="submit"><i class="fas fa-hamburger"></i> Submit Order</button>
			</form>

	    </div>
	
  	</div>
		<br>
	<!-- end .row -->

</div>

